---
import type { HTMLAttributes } from "astro/types";
import { cva, type VariantProps } from "class-variance-authority";

const label = cva("label", {
  variants: {
    variant: {
      primary: ["flex text-sm leading-5 tracking-normal text-theme-black"],
      secondary: [
        "absolute top-1/2 left-3.5 transform -translate-y-1/2",
        "leading-5 text-theme-muted text-sm transition duration-150 ease-out",
      ],
    },
  },
  defaultVariants: {
    variant: "primary",
  },
});

export interface Props extends HTMLAttributes<"label">, VariantProps<typeof label> {}
const { class: className, variant, ...props } = Astro.props;

const variantClasses = label({ variant });
---

<label class:list={[variantClasses, className]} {...props}>
  <slot />
</label>
