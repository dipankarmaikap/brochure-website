---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"textarea"> {}

const { class: className, ...props } = Astro.props;
---

<textarea
  class:list={[
    "text-sm border caret-[#1B243F] border-transparent focus:outline-none focus:border-theme-primary",
    "bg-white flex w-full p-3.5 h-38 rounded-lg placeholder:text-theme-muted placeholder:text-sm",
    className,
  ]}
  {...props}
>
</textarea>
