# Turso Database URL (e.g., libsql://your-database.turso.io)
TURSO_DATABASE_URL=
# Turso Auth Token (from your Turso dashboard)
TURSO_AUTH_TOKEN=
# SMTP server host (e.g., smtp.gmail.com)
SMTP_HOST=
# SMTP port (e.g., 587 for TLS, 465 for SSL)
SMTP_PORT=
# Whether to use secure connection (true for SSL, false for TLS/STARTTLS)
SMTP_SECURE=
# SMTP username (your email address or SMTP account username)
SMTP_USER=
# SMTP password (your email password or app-specific password)
SMTP_PASS=
# Email address to send from (e.g., Your Name)
SMTP_FROM=